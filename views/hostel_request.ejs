<% include partials/head %>
<% for(let i=0; i < request.length; i++) { %>

<div class="adminrequest">
       
    <div class="request">
            
        <ul>
            <li class="name"><%= request[i].name %></li>
            <li class="dept"><%= request[i].department %></li>
            <li class="blk">Block <%= request[i].block %></li>
            <li class="flat">Flat <%= request[i].flat %> </li>
            <li class="room">Room <%= request[i].room %> </li>
            <li></li>
        </ul>   
    </div>     

        
    
    <div id="adminbotton">    
            <form action="/admin/accept_request" method="POST">
            <input id="accept" class="btn" type="hidden" value="<%= request[i]._id %>" name="requestID" >
            <input id="accept" class="btn" type="submit" value="ACCEPT" name="acceptBtn" >
        </form>
            <form action="/admin/reject_request" method="POST">
                <input id="decline" class="btn" type="submit" value="DECLINE" name="declineBtn">
                <input id="decline" class="btn" type="hidden" value="<%= request[i]._id %>" name="requestID">
            </form>          
    </div>






</div>
<% } %>




